	<div id="myAlert" class="alert alert-{{ type }}" role="alert"
		style="z-index: 9999999;position: absolute; top: 2%; left: 50%; transform: translate(-50%, -50%);"> <i
			class="fas fa-check-circle"></i>
		{{message | raw }}
		{% set current_route = app.request.attributes.get('_route') %}
		{% if type !="danger" %}
		{% if current_route == "nos_capsules" or current_route == "nos_packs" %}
		<br>
		<i class="far fa-hand-point-right"></i>
		<a href="{{path('cart_index')}}" style="color:black;text-decoration:underline;">
			Aller au checkout.</a>
		{% endif %}
		{% endif %}
		<button type="button" class="close" style="position: absolute;top: 0px;right: 5px;" data-dismiss="alert"
			id="btnClose" aria-label="Close">
