{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
    <style>
        button#btn\ btn-success{
            font-family:'Lexend';
            padding: 13px 38px 13px 38px !important;
            border-radius: 48px;
                background: linear-gradient(105deg, #B0CB32 39.26%, #7B8E21 100%);
        }
        .log-title{
            font-family:'Lexend';
        }
        nav.navbar.navbar-expand-lg {
            display: none;
        }
        footer.text-white.text-start.text-lg-start {
            display: none;
        }
    
    </style>
	<div class="container">
		<div class="row mt-5">
			<div class="col-sm-3"></div>
			<div class="col-sm-6 mb-4 login-container mt-4" style="padding: 50px;    border-radius: 30px;box-shadow: 0px 1px 12px 0px;">
               
				<form method="post">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					{% if app.user %}
						<div class="mb-3">
							You are logged in as
							{{ app.user.userIdentifier }},
							<a href="{{ path('app_logout') }}">Logout</a>
						</div>
					{% endif %}

					{# <h1 class="h3 mb-3 font-weight-normal log-title text-center" >login</h1> #}
					<div class="text-center mb-3">
                        <img src="/front/img/logo.png" width="20%">
                    </div>
                    <center>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control w-75" autocomplete="email" required autofocus placeholder="Email">
                        
                        <input type="password" name="password" id="inputPassword" class="form-control w-75 mt-3" autocomplete="current-password" required  placeholder="Mot de passe">

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    
                        <div class="checkbox mb-3 mt-3">
                            <label>
                                <input type="checkbox" name="_remember_me" >
                                <span class="text-muted">Remember me</span>
                            </label>
                        </div>
                    </center>
                    <div class="text-center">
                        <button class="btn btn-success w-50 " id="btn btn-success" type="submit">
                            Sign in <i class="fas fa-sign-in ml-3"></i>
                        </button>
                    </div>    
				</form>

			</div>

			<div class="col-sm-3"></div>


		</div>


	</div>

{% endblock %}
