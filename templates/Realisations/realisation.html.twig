{% block body %}

<div id="realisationmobil">
	<div class="first-slide-laptop-realisation"
		style="background-image: url('/front/img/{{realisation.image}}'); background-size: cover;background-repeat: no-repeat; height: auto;">
		<div class="container">
			<div class="text-center row-first-slide align-center">
				<h3 class="center-div">{{realisation.title}}</h3>
				<div class="realisation-info pt-5">
					<div class="row">

						<div class="col-sm-12">

							<div class="realistion-name" style="color:black;font-weight: 800;">
								<h6 style="color:black;font-weight: 800;">{{realisation.title}}</h6>
							</div>
							<div class="realistion-description" style="padding: 10px;"><span class="text-muted"
									style="font-size:12px">{{realisation.description|striptags|raw|slice(0,75)}}...</span>
							</div>
							<div class="realisation-information" style="text-align: start;padding-left: 73px;">
								<div class="realistion-city"><i class="fa-solid fa-location-dot"
										style="font-size:20px;    color: var(--lin, #b0cb32);margin-right: 10px;"></i><span
										class="text-muted"
										style="font-size:12px; font-weight: 400;">{{realisation.city}}</span></div>
								<div class="realistion-superficie"><img src="/front/img/surface-area.png"
										style="width: 22px;margin-right: 10px;margin-left: -4px;" /><span
										class="text-muted"
										style="font-size:12px; font-weight: 400;">{{realisation.superficie}}</span>
								</div>
								<div class="realistion-superficie" style="margin-top:4px"><i
										class="fa-regular fa-calendar"
										style="font-size:20px;    color: var(--lin, #b0cb32);margin-right: 10px;margin-left: -2px;"></i><span
										class="text-muted" style="font-size:12px; font-weight: 400;">Mardi 01 Janvier
										2024</span></div>
							</div>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>


</div>



<div id="realisationlaptop">
	<div class="first-slide-laptop-realisation"
		style="background-image: url('/front/img/{{realisation.image}}'); background-size: cover;background-repeat: no-repeat;">
		<div class="container">
			<div class="text-center row-first-slide align-center">
				<h3 class="center-div">{{realisation.title}}</h3>
				<div class="realisation-info pt-5">
					<div class="row">
						<div class="col-sm-7" style="text-align: left;padding-left: 60px;">
							<div class="realistion-name" style="color:black;font-weight: 800;">
								<h6 style="color:black;font-weight: 800;">{{realisation.title}}</h6>
							</div>
							<div class="realistion-description"><span class="text-muted"
									style="font-size:12px">{{realisation.description|striptags|raw|slice(0,75)}}...</span>
							</div>

						</div>
						<div class="col-sm-5" style="text-align: left">
							<div class="realistion-city"><i class="fa-solid fa-location-dot"
									style="font-size:20px;color: var(--lin, #b0cb32);margin-right: 10px;margin-left: 6px;"></i><span
									class="text-muted"
									style="font-size:12px; font-weight: 400;">{{realisation.city}}</span></div>
							<div class="realistion-superficie" style="margin-bottom: 7px;"><img
									src="/front/img/surface-area.png" style="width: 27px;margin-right: 6px;" /><span
									class="text-muted"
									style="font-size:12px; font-weight: 400;">{{realisation.superficie}}</span></div>
							<div class="realistion-superficie"><i class="fa-regular fa-calendar"
									style="font-size:20px;color: var(--lin, #b0cb32);margin-right: 10px;margin-left: 6px;"></i><span
									class="text-muted" style="font-size:12px; font-weight: 400;">Mardi 01 Janvier
									2024</span></div>

						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
</div>

<div class="container realisation-container" style="max-width: 1500px;z-index: 1;position: relative;"
	id="backround-section">
	<div class="section container">
		<div class="row">
			<div class="col-12">
				<img src="{{ asset('front/img/Link.png') }}" alt="" style="margin-left: -34px;margin-top:60px"
					class="img-link" />
				<h2 class="title" style="margin-top: -32px; font-size: 23px; margin-bottom: 30px; font-weight: 700;">
					{{ realisation.title }}
				</h2>
				<span class="text-muted" style="text-align:start">{{ realisation.description | raw }}</span>
			</div>
		</div>

		<div class="realisation-img">
			<div class="row">
				{% for image in realisation.images %}
				<div class="col-sm-6 mb-3">
					<img src="{{ asset('front/img/' ~ image.upload) }}" alt="" class="img-fluid" />
				</div>


				{% endfor %}
			</div>
		</div>

		<div class="row">
			<div class="col-6">
				<img src="/front/img/link.png" alt="" style="margin-left: -34px;">
				<h2 class="title" style="font-size: 23px; margin-bottom: 30px; font-weight: 700; margin-top: -32px;">
					Galerie
				</h2>

			</div>
		</div>
		<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
			<ol class="carousel-indicators">
				{% for image in realisation.images %}
				<li data-target="#carouselExampleIndicators" data-slide-to="{{ loop.index0 }}"
					class="{% if loop.first %}active{% endif %}"></li>
				{% endfor %}
			</ol>

			<div class="carousel-inner">
				{% for image in realisation.images %}
				<div class="carousel-item {% if loop.first %}active{% endif %}">
					<img class="d-block w-100 carousel-image" src="{{ asset('front/img/' ~ image.upload) }}"
						alt="Slide {{ loop.index }}">
				</div>
				{% endfor %}
			</div>

			<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>
	</div>
</div>



{% endblock %}